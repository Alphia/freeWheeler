    public Account makeAccount(HttpServletRequest httpRequest) {
        String email = httpRequest.getParameter("email");
        String password = httpRequest.getParameter("password");
        String name = httpRequest.getParameter("name");
        String phoneNumber = httpRequest.getParameter("phoneNumber");
        String country=httpRequest.getParameter("country");

        Account account = new Account(name, password, true, email, phoneNumber, country);

        return account;
    }
